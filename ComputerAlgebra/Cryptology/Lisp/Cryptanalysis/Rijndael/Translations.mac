*/

aes_round_ctrb :
 [aes_round_ctr_ctl, aes_round_namespace, aes_round_ns_var_l]$

/* AES round namespace */
kill(aes_round_ns)$
declare(aes_round_ns,noun)$
declare(aes_round_ns,posfun)$
aes_round_namespace([args]) := apply(nounify(aes_round_ns),args)$

aes_round_ns_var_l(arg_l,rewrite_mapping) := block(

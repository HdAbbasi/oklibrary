  [r,ct_arg_l,namespace,bits,iBits, rkBits, oBits,tBits,rs:[]],
  bits : rest(arg_l,-1),
  ct_arg_l : last(arg_l),
  namespace : construct_constraint_namespace(
    ct_arg_l[1],aes_round_namespace,rest(ct_arg_l)),
  r : ct_arg_l[2],
  iBits : take_elements(128,bits),
  rkBits : take_elements(128,rest(bits,128)),
  oBits : rest(bits,256),
  tBits : generate_aes_constraint_vars(1,128,namespace,nounify(so)),
  rs : cons(
    apply_constraint_template(aes_subbytes_ct,
        append(iBits,tBits),
        [namespace]),
    rs),
  iBits : tBits,
  tBits : generate_aes_constraint_vars(1,128,namespace,nounify(ro)),
  rs : cons(
    apply_constraint_template(aes_shiftrows_ct,
        append(iBits,tBits),
        [namespace]),
    rs),
  iBits : tBits,
  tBits : generate_aes_constraint_vars(1,128,namespace,nounify(mo)),
  rs : cons(
    apply_constraint_template(aes_mixcolumns_ct,
      append(iBits, tBits),
      [namespace]),
    rs),
  iBits : tBits,
  tBits : oBits,
  rs : cons(
    apply_constraint_template(aes_add_ct,
      append(iBits, rkBits, tBits),
      [namespace,384]),
    rs),
  return(rs)

oklib_include("OKlib/ComputerAlgebra/Hypergraphs/Lisp/SetSystems.mac")$


kill(f)$

/* ***********************
   * Fundamental notions *
   ***********************
*/

okltest_grdins_p(f) := (
  assert(f([{},{}]) = false),
  assert(f([{},{{}}]) = true),
  for n : 0 thru 4 do block([N : setn(n), M],
    M : [N,adjoin({},singletons(N))],
    assert(f(M) = true)
  ),
  for n : 0 thru 3 do block([N : setn(n), M],
    M : [N,powerset(N)],
    assert(f(M) = true)
  ),
  true)$


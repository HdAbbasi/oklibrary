okltest_greentao2_fcs(f) := (
  assert(f(0,0) = [{},{{}}]),
  assertf((0,1) = [{2},{{}}]),
  assert(f(1,0) = [{},{}]),
  assert(f(1,1) = [{2},{{2},{-2}}]),
  assert(f(2,0) = [{},{}]),
  assert(f(2,1) = [{2},{}]),
  assert(f(2,2) = [{2,3},{{2,3},{-2,-3}}]),
  assert(f(2,3) = [{2,3,5},{{2,3},{2,5},{3,5},{-2,-3},{-2,-5},{-3,-5}}]),
  assert(f(3,0) = [{},{}]),
  assert(f(3,1) = [{2},{}]),
  assert(f(3,2) = [{2,3},{}]),
  assert(f(3,3) = [{2,3,5},{}]),
  assert(f(3,4) = [{2,3,5,7},{{3,5,7},{-3,-5,-7}}]),
  true)$


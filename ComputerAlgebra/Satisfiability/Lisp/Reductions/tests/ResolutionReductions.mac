kill(f)$


/* ****************************
   * 2-Subsumption resolution *
   ****************************
*/

okltest_redtsrp(f) := block(
  assert(f({}) = true),
  assert(f({{}}) = true),
  assert(f({{1}}) = true),
  assert(f({{},{1}}) = true),
  for n : 1 thru 5 do block([F : full_fcs(n)[2]],
    assert(f(F) = false)
  ),
  true)$


oklib_include("Transitional/ComputerAlgebra/TestSystem/Lisp/Asserts.mac")$
oklib_include("Transitional/ComputerAlgebra/Satisfiability/Lisp/Generators/Generators.mac")$
oklib_include("Transitional/ComputerAlgebra/Satisfiability/Lisp/Backtracking/DLL_solvers.mac")$


kill(f)$

okltest_probsatrand(f) := block(
  assert(f({}) = 1),
  assert(f({{}}) = 0),
  assert(f({{1}}) = 1/2),
  assert(f({{1},{-1}}) = 1/4),
  assert(f({{1},{2,3},{4,5,6}}) = 21/64),
  for m : 1 thru 3 do
   for n : 1 thru 3 do block([F : weak_php(m,n)],
    assert_float_equal(f(F), exp(logprobrand(F)))),
  true)$



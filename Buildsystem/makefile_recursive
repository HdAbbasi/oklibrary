# Oliver Kullmann, 10.4.2005 (Swansea)

SHELL = /bin/sh
.SUFFIXES :

goals := prebuild all unoptimised optimised check test testop clean cleanall force
sub_makes := $(dir $(shell find * -mindepth 1 -maxdepth 1 -name "makefile"))

.PHONY : $(goals) $(sub_makes)

all : $(sub_makes)
$(goals) : $(sub_makes)

$(sub_makes) :
	$(MAKE) -C $@ $(MAKECMDGOALS)


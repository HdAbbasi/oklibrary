# Oliver Kullmann, 10.4.2005 (Swansea)

SHELL = /bin/sh
.SUFFIXES :

define last-element
$(word $(words $1),$1)
endef
srcdir := $(shell cd $(dir $(call last-element, $(MAKEFILE_LIST))); pwd)

ifndef OKPlatform
  ifdef OKPLATFORM
    OKPlatform := $(OKPLATFORM)
  else
    $(error Either OKPlatform (a make-variable) or OKPLATFORM (an environment-variable) must be defined when calling this makefile!)
  endif
endif

ifndef OKSystem
  ifdef OKSYSTEM
    OKSystem := $(OKSYSTEM)
  else
    OKSystem := $(OKPlatform)/OKsystem
  endif
endif

OKBuildsystem := $(OKSystem)/Transitional/Buildsystem

export

include $(srcdir)/Transitional/Buildsystem/makefile_standardgoals.mak

export

include $(srcdir)/Transitional/Buildsystem/makefile_recursive_noneincluded

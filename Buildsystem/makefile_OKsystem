# Oliver Kullmann, 10.4.2005 (Swansea)

SHELL = /bin/sh
.SUFFIXES :

# TEMPORARY COMMENT : The plans for the build system claim that
# the definition of srcdir from this makefile has been eliminated.
# Either the plans, or this makefile need to be updated.

define last-element
$(word $(words $1),$1)
endef
srcdir := $(shell cd $(dir $(call last-element, $(MAKEFILE_LIST))); pwd)

ifndef OKplatform
  ifdef OKPLATFORM
    OKplatform := $(OKPLATFORM)
  else
    $(error Either OKplatform (a make-variable) or OKPLATFORM (an environment-variable) must be defined when calling this makefile!)
  endif
endif

ifndef OKsystem
  ifdef OKSYSTEM
    OKsystem := $(OKSYSTEM)
  else
    OKsystem := $(OKplatform)/OKsystem
  endif
endif

OKBuildsystem := $(OKsystem)/Transitional/Buildsystem

export

include $(OKBuildsystem)/makefile_standardgoals.mak

export

include $(OKBuildsystem)/makefile_recursive_noneincluded
